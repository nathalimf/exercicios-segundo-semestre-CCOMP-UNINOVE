#include <stdio.h>

int main()
{
    int anonascimento, idade;
    
    printf("Insira o seu ano de nascimento com 4 dígitos: ");
    scanf("%d", &anonascimento);
    
   if (anonascimento > 2024){
       printf("A data de nascimento não é valida.");
   } else {
       idade = 2024 - anonascimento;
       printf("Você tem %d anos de idade.", idade);
   }

return 0;
}

